<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.YDBAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your app theme here as needed -->
        <!-- Example: <item name="colorPrimary">@color/my_brand_primary</item> -->
    </style>

    <!-- Full-screen Launch Theme (used while app starts) -->
    <style name="Theme.YDBAndroid.Launch" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Use our full-screen drawable as the window background -->
        <item name="android:windowBackground">@drawable/launch_screen</item>

        <!-- Disable the system animated splash icon and any branding image -->
        <item name="windowSplashScreenAnimatedIcon">@null</item>


        <!-- Optional: shorten splash animation (ms) if needed -->
        <item name="android:windowDisablePreview">true</item>

        <!-- After splash finishes, load the normal app theme -->
        <item name="postSplashScreenTheme">@style/Theme.YDBAndroid</item>
    </style>

</resources>
